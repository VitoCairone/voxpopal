<h1>New Session</h1>

<%= form_tag({controller: "sessions", action: "create"}, method: "post") do %>
  <div class="field">
    <%= label_tag(:email) %><br>
    <%= text_field_tag(:email) %>
  </div>
  <div class="field">
    <%= label_tag(:password) %><br>
    <%= text_field_tag(:password) %>
  </div>
  <div class="actions">
    <%= submit_tag("Login") %>
  </div>
<% end %>