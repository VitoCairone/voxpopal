<p id="notice"><%= notice %></p>

<%= link_to 'New Issue', new_issue_path %>

<% if is_admin? %>

  <h1>Admin Issues Table</h1>

  <table>
    <thead>
      <tr>
        <th>Codename</th>
        <th>Speaker</th>
        <th>Text</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @issues.each do |issue| %>
        <tr>
          <td><%= issue.codename %></td>
          <td><%= issue.speaker %></td>
          <td><%= issue.text %></td>
          <td><%= link_to 'Show', issue %></td>
          <td><%= link_to 'Edit', edit_issue_path(issue) %></td>
          <td><%= link_to 'Destroy', issue, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

<% end %>
