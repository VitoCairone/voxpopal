<p id="notice"><%= notice %></p>

<p>
  <strong>Codename:</strong>
  <%= @issue.codename %>
</p>

<p>
  <strong>Speaker:</strong>
  <%= @issue.speaker %>
</p>

<p>
  <strong>Text:</strong>
  <%= @issue.text %>
</p>

<p>
	<div style="margin-left:20px;">
	<% @issue.choices.each do |choice| %>
		<% @choice = choice %>
		<%= render choice %>
	<% end %>
	</div>
</p>


<%= link_to 'Edit', edit_issue_path(@issue) %> |
