<%= form_for(@issue) do |f| %>
  <% if @issue.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@issue.errors.count, "error") %> prohibited this issue from being saved:</h2>

      <ul>
      <% @issue.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </div>

  <% extant_choices = @issue.choices %>
  <% n_extant = extant_choices.size || 0 %>
  <% n_choices = [2, n_extant].max %>
  <% for i in 1..n_choices %>
    <div class="field">
      <label for="choices_<%= i %>_text">Choice</label><br>
      <textarea name="choices[<%= i %>][text]" id="choices_<%= i %>_text">
        <%= extant_choices[i-1].text if i <= n_extant %>
      </textarea>
    </div>
  <% end %>

  <p><i>Choices are always presented in a <b>random</b> order</i></p>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>
