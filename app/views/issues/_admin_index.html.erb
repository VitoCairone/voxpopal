<h1>Admin Issues Table</h1>

<table>
  <thead>
    <tr>
      <th>Code</th>
      <th>Speaker</th>
      <th>Text</th>
      <th>Choices</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @issues.each do |issue| %>
      <tr>
        <td><%= issue.codename %></td>
        <td><%= issue.speaker %></td>
        <td><%= issue.text %></td>
        <td><%= issue.choices.length %></td> <!-- ineff, cut at scale -->
        <td><%= link_to 'S', issue %></td>
        <td><%= link_to 'E', edit_issue_path(issue) %></td>
        <td><%= link_to 'D', issue, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>