<p id="notice"><%= notice %></p>

<h1>Listing Choices</h1>

<table>
  <thead>
    <tr>
      <th>Issue</th>
      <th>Speaker</th>
      <th>Text</th>
      <th>Voice tally 1</th>
      <th>Voice tally 2</th>
      <th>Voice tally 3</th>
      <th>Current rank</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @choices.each do |choice| %>
      <tr>
        <td><%= choice.issue %></td>
        <td><%= choice.speaker %></td>
        <td><%= choice.text %></td>
        <td><%= choice.voice_tally_1 %></td>
        <td><%= choice.voice_tally_2 %></td>
        <td><%= choice.voice_tally_3 %></td>
        <td><%= choice.current_rank %></td>
        <td><%= link_to 'Show', choice %></td>
        <td><%= link_to 'Edit', edit_choice_path(choice) %></td>
        <td><%= link_to 'Destroy', choice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

